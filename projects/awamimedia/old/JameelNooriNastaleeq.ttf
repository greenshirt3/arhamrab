/* style.css */
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap');

@font-face {
    font-family: 'UrduFont';
    src: url('JameelNooriNastaleeq.ttf') format('truetype');
}

:root {
    --primary-red: #cc0000;
    --glossy-black: rgba(0, 0, 0, 0.85);
    --glass-effect: rgba(255, 255, 255, 0.1);
}

body {
    background: radial-gradient(circle at center, #1a2a3a 0%, #000000 100%); /* 3D Depth Background */
    color: white;
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
    min-height: 100vh;
}

.container {
    max-width: 1600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
}

/* --- THE 3D STAGE (Video Container) --- */
.main-stage {
    width: 100%;
    position: relative;
    background: #000;
    box-shadow: 0 20px 50px rgba(0,0,0,0.8);
    border-bottom: 5px solid var(--primary-red);
}

/* Responsive Video Aspect Ratio */
.broadcast-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    background: #000;
    overflow: hidden;
}

.broadcast-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
}

/* --- THE 3D OVERLAYS --- */
.overlay-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none; /* Let clicks pass through to YouTube */
    box-shadow: inset 0 0 100px rgba(0,0,0,0.7); /* Vignette for depth */
}

/* 3D Logo - Top Right */
.channel-logo {
    position: absolute;
    top: 3%;
    right: 3%;
    width: 8%; /* Responsive width */
    min-width: 60px;
    aspect-ratio: 1/1;
    z-index: 20;
    filter: drop-shadow(0 5px 15px rgba(0,0,0,0.6));
}
.logo-img {
    width: 100%;
    height: 100%;
    animation: spin3D 8s infinite linear;
}
@keyframes spin3D {
    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(360deg); }
}

/* --- THE TICKER SYSTEM (Sticky & 3D) --- */
.ticker-system {
    position: absolute;
    bottom: 5%; /* Floating slightly up for 3D feel */
    left: 2%;
    right: 2%;
    height: 10%;
    min-height: 50px;
    display: flex;
    z-index: 10;
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.8));
}

.label-box {
    width: 15%;
    background: linear-gradient(135deg, #cc0000 0%, #990000 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1.2vw; /* Responsive Text */
    text-transform: uppercase;
    clip-path: polygon(0 0, 100% 0, 90% 100%, 0% 100%); /* Slanted Edge */
}

.ticker-wrap {
    width: 85%;
    background: var(--glossy-black);
    backdrop-filter: blur(5px); /* Glass Effect */
    border-left: 5px solid var(--glass-effect);
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
}

.ticker-text {
    white-space: nowrap;
    font-family: 'UrduFont', sans-serif;
    font-size: 2.5vw; /* Huge Responsive Font */
    color: #fff;
    text-shadow: 2px 2px 4px #000;
    padding-top: 5px;
    position: absolute;
    will-change: transform;
    animation: tickerMove 25s linear infinite;
    direction: rtl;
}

@keyframes tickerMove {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-150%); }
}

/* Breaking News Red Mode */
.breaking-mode .label-box {
    background: linear-gradient(135deg, #ff0000 0%, #ff5500 100%);
    animation: pulseRed 2s infinite;
}
.breaking-mode .ticker-wrap {
    border-top: 2px solid red;
}
@keyframes pulseRed {
    0% { filter: brightness(1); }
    50% { filter: brightness(1.3); }
    100% { filter: brightness(1); }
}

/* --- PLAYLIST SECTION --- */
.playlist-section {
    padding: 20px;
    background: #111;
}
.playlist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 15px;
}
.video-card {
    background: #222;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s;
}
.video-card:hover { transform: translateY(-5px); border: 1px solid #cc0000; }
.thumb { height: 120px; width: 100%; object-fit: cover; }
.info { padding: 10px; }
.info h4 { margin: 0; font-size: 14px; color: #eee; }

/* --- MOBILE OPTIMIZATION --- */
@media (max-width: 768px) {
    .ticker-system { bottom: 0; left: 0; right: 0; width: 100%; border-radius: 0; }
    .label-box { font-size: 3vw; width: 25%; clip-path: none; }
    .ticker-wrap { width: 75%; }
    .ticker-text { font-size: 5vw; }
    .channel-logo { width: 12%; top: 10px; right: 10px; }
}
